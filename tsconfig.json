{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true                          
  },
  "ts-node": {
    "esm": true                             
  },
  "include": ["src/**/*", "prisma/prismaMiddleware/**/*"]
}
